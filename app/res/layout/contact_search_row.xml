<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <TextView android:id="@+id/group_label"
              android:gravity="center_vertical"
              android:textColor="@color/black"
              android:layout_height="30dp"
              android:layout_width="fill_parent"
              android:textStyle="bold"
              android:paddingLeft="7dp"
              android:textSize="16dp"
              android:background="@drawable/silver_divider">

    </TextView>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:gravity="center_vertical"
                  android:background="@drawable/normal_msg_bg"
                  android:layout_height="@dimen/row_height">
        <ImageView
                android:id="@+id/ava"
                android:scaleType="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"/>

        <LinearLayout android:orientation="vertical"
                      android:layout_width="0px"
                      android:layout_height="wrap_content"
                      android:layout_weight="1">

            <TextView android:id="@+id/name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/contant_name"
                      android:singleLine="true"
                    />

            <TextView android:id="@+id/extra"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:ellipsize="end"
                      android:singleLine="true"
                    />

        </LinearLayout>

        <ImageView android:id="@+id/online"
                   android:visibility="gone"
                   android:src="@drawable/online_list"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="0"
                   android:layout_marginRight="15dp"
                   android:scaleType="center"/>

    </LinearLayout>

</LinearLayout>