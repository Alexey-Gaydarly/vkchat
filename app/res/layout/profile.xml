<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/tiled_light_bg"
              android:gravity="center_horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="0"
                  android:layout_marginTop="15dp"
                  android:background="@drawable/photo_placeholder">

        <ImageView android:id="@+id/img"
                   android:src="@drawable/no_photo_big"
                   android:scaleType="center"
                   android:layout_width="200dp"
                   android:layout_height="200dp"
                />

    </LinearLayout>

    <Button
            android:layout_marginTop="7dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:id="@+id/btn_send"
            android:text="@string/send_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="gone"
            style="@style/blue_button"
            />

    <Button
            android:layout_marginTop="7dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:id="@+id/btn_send_invitation"
            android:text="@string/send_invitation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="gone"
            style="@style/blue_button"
            />

    <TextView
            android:layout_margin="10dp"
            android:id="@+id/invitation"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_not_registered"
            android:visibility="gone"
            />

    <Button
            android:layout_marginTop="7dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:id="@+id/btn_call"
            android:text="@string/call"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            style="@style/blue_button"
            android:visibility="gone"
            />

    <Button
            android:layout_marginTop="7dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:id="@+id/btn_add_to_friends"
            android:text="@string/add_to_friends"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            style="@style/blue_button"
            android:visibility="gone"
            />

    <Button
            android:layout_marginTop="7dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:id="@+id/btn_cancel_invitation"
            android:text="@string/cancel_invitation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            style="@style/no_bg_button"
            android:visibility="gone"
            />

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="1"/>

    <Button
            android:layout_marginTop="7dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_delete_friend"
            android:text="@string/delete_friend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            style="@style/no_bg_button"
            android:visibility="gone"
            />


</LinearLayout>