<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:minHeight="70dp"
        android:layout_width="fill_parent"
        android:layout_height="70dp">

    <ImageView
            android:id="@+id/img"
            android:src="@drawable/logo"
            android:scaleType="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

    <TextView android:id="@+id/msg_time"
              android:layout_alignParentTop="true"
              android:layout_alignParentRight="true"
              android:layout_marginTop="3dp"
              android:layout_marginRight="3dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/user_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_toLeftOf="@id/msg_time"
              android:layout_toRightOf="@id/img"
              android:layout_marginTop="3dp"
              android:layout_marginRight="5dp"
              style="@style/contact_name"
            />

    <ImageView android:id="@+id/img_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="3dp"
               android:layout_alignParentRight="true"
               android:paddingTop="20dp"
               android:src="@drawable/read"
            />

    <ImageView android:id="@+id/img_out"
               android:layout_below="@id/img_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="3dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/out"
            />

    <TextView android:id="@+id/msg_body"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/user_name"
              android:layout_toLeftOf="@id/img_status"
              android:textColor="@color/dark_blue_button_color"
              android:textSize="13dp"
              android:gravity="top|left"
              android:maxLines="2"
              android:layout_toRightOf="@id/img"
              android:ellipsize="end"
            />

</RelativeLayout>