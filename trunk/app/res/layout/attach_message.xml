<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fwd_attach"
        android:background="@drawable/fwd_back"
        android:layout_width="180dp"
        android:layout_height="wrap_content">

    <ImageView android:id="@+id/img_fwd"
               android:layout_marginLeft="3dp"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/vk_icon"
            />

    <TextView android:id="@+id/name_fwd"
              android:layout_marginLeft="4dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:textSize="13dp"
              android:text="Гриша"
              android:layout_toRightOf="@id/img_fwd"
              style="@style/contact_name"
              android:ellipsize="end"/>

    <TextView android:id="@+id/time_fwd"
              android:layout_marginLeft="4dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/medium_gray"
              android:singleLine="true"
              android:text="06.07"
              android:layout_toRightOf="@id/img_fwd"
              android:layout_below="@id/name_fwd"
              android:textSize="13dp"
              android:ellipsize="end"/>

    <TextView android:id="@+id/body_fwd"
              android:layout_marginLeft="4dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Это просто\nрадость какая-то"
              android:layout_toRightOf="@id/img_fwd"
              android:layout_below="@id/time_fwd"
              android:textSize="13dp"/>

</RelativeLayout>