<resources>
    <style name="actionbar_title">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/actionbar_title</item>
    </style>

    <style name="contact_name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>

    <style name="chat_msg">
        <item name="android:textColor">@color/darkgray</item>
    </style>

    <style name="artist">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="track">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="chat_msg_dt">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="register_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#3c5775</item>
    </style>

    <style name="register_summary_text">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#506378</item>
    </style>

    <style name="ProgressBar.Standard" parent="@style/Widget.Sherlock.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_standard</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ProgressBar.Blue" parent="@style/Widget.Sherlock.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_blue_rot</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ProgressBar.VK" parent="@style/Widget.Sherlock.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_rot</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="blue_button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/blue_button_color</item>
    </style>

    <style name="no_bg_button">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/dark_blue_button_color</item>
    </style>

    <style name="contant_name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolBarAnimation">
        <item name="android:windowEnterAnimation">@anim/tool_bar_enter</item>
        <item name="android:windowExitAnimation">@anim/tool_bar_exit</item>
    </style>

    <style name="selection_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
    </style>

</resources>